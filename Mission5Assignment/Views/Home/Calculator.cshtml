@{
    ViewBag.Title = "Calculator";
    Layout = "_Layout";
}

<h2>Calculator App</h2>
<div>
    <div class="form-row">
        <label for="hoursInput">Number of Hours Wanted for Consulting:</label>
        <input type="number" id="hoursInput" />
    </div>
    <div class="form-row">
        <label for="rateInput">Hourly Rate for Consulting: $</label>
        <input type="number" id="rateInput" value="50" readonly />
    </div>
    <div class="form-row">
        <label for="totalOutput">Total Cost: $</label>
        <input type="text" id="totalOutput" readonly />
    </div>
    <div class="form-row" style="justify-content: flex-start;">
        <button id="calculateBtn" style="font-weight: bold; padding: 8px 16px;">Calculate Total</button>
    </div>
</div>

<div style="text-align: center; margin-top: 0;">
    <p><a href="/Home/Index">Back to Home</a></p>
</div>